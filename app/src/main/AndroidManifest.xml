<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="dcc.ufmg.br.quizdetestesunidade">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="br.ufmg.dcc.unit_test_quiz.ModulesActivity"
            android:label="@string/title_activity_modules"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name="br.ufmg.dcc.unit_test_quiz.QuestionsActivity"
            android:label="@string/title_activity_new_questions"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="br.ufmg.dcc.unit_test_quiz.TestWizActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name="br.ufmg.dcc.unit_test_quiz.FinishingModuleActivity"
            android:label="@string/title_activity_new_questions"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>